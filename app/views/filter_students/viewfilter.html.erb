<h1>Filtered students</h1>

<%= form_tag 'sendemail' do %>

  <%  @students.each do |s| %>
    <%= s.name %><br>
    <%= hidden_field_tag 'studentslist[]', s.id %>
  <% end %>
  <%= label_tag "Format email" %>
  <%= text_area_tag 'mailcontent', nil, size: "25x10" %>
  <%= submit_tag 'Send Email'%>
<% end %>
